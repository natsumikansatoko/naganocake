<div class="row">
  <div class="col-sm-8 px-sm-0 offset-sm-1">
    <h4 class="m-5 w-25 bg-light text-center">商品一覧</h2>
  </div>
  <div class="col-sm-1 text-right mr-5 mt-5">
    <h4><%= link_to '+', new_admin_item_path %></h4>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to  admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-danger font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>