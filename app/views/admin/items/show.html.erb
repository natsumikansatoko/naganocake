<h4 class="m-5 w-25 bg-light text-center">商品詳細</h2>
<div class="container">
  <div class="row">
    <div class="col-lg">
      <div class="img-container">
        <%= attachment_image_tag @item, :image, format: 'jpeg' %>
      </div>
    </div>
    <div class="col-lg">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込金額</br>
            (税抜価格)
          </th>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success font-weight-bold">販売中</p>
            <% else %>
              <p class="text-danger font-weight-bold">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="d-grid gap-2 col-6 mx-auto">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>