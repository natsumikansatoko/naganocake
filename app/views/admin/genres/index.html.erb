<h4 class="m-5 w-25 bg-light text-center">ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <table>
    <%= f.label 'ジャンル名', class: "mr-5 ml-3" %>
    <%= f.text_field :name, :placeholder => "ジャンル名", class: "mr-5" %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </table>
<% end %>

<div class="col-lg-4 col-md-6 col-sm-8 my-5">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th class="text-center">ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td class="text-left"><%= genre.name %></td>
          <td class="text-right"><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>